<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment">

    <ScrollView
        android:id="@+id/item_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/order_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/items_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/order_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/order_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/order_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/order_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/order_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/order_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/order_backdrop"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/gray_mid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/order_constraint_layout"
            tools:ignore="VisualLintBounds" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/order_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingHorizontal="100dp"
                android:text="@string/order_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="VisualLintButtonSize" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>